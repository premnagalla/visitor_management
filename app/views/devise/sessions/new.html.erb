<div class='modal-body' style='padding:40px 50px;'>
  <div class='well well-lg'>
    <div class='row'>
      <div class='col-sm-4 col-sm-offset-4'>
        <h2>Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'login-form') do |f| %>
          <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "email", class:"form-control", placeholder: "Enter Email" %>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", type: 'Password' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group form-check">
              <%= f.check_box :remember_me, class: 'form-check-input', id: 'rememberCheck' %>
              <%= f.label :remember_me, class: 'form-check-label', for: 'rememberCheck' %>
            </div>
          <% end %>

          <%= f.submit "Log in", class: "btn btn-primary" %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
