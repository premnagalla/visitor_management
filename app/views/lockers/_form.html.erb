<%= form_for @locker, :html => { :class => "form-horizontal locker" } do |f| %>

  <% if @locker.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@locker.errors.count, "error") %> prohibited this locker from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @locker.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :status, 'Available', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :status %>
    </div>
    <%=f.error_span(:status) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lockers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
