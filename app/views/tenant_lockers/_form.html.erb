<%= form_for @tenant_locker, :html => { :class => "form-horizontal tenant_locker" } do |f| %>

  <% if @tenant_locker.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@tenant_locker.errors.count, "error") %> prohibited this tenant_locker from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @tenant_locker.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :locker_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :locker_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:locker_id) %>
  </div>
  <div class="form-group">
    <%= f.label :start_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :start_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:start_date) %>
  </div>
  <div class="form-group">
    <%= f.label :end_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :end_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:end_date) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tenant_lockers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
