<!DOCTYPE html>
<html>
  <head>
    <title>RpVisitor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application',  media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
      .container{
        height: auto;
      }
      .navbar-default{
        background-color: #80C4FF;
        color: #fff;
        font-size: 14px;
      }
      .footer{
        background-color: #80C4FF;
        color: #fff;
        height:60px;
        font-size: 14px;
      }
      .links {
          color: white;
          font-size: 25px;
          font-family: bold;
        }
      table thead tr {
        color: white;
      }
    </style>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class='navbar-header'>
          <%= link_to 'RP Visitor', root_path, class: 'navbar-brand links',  style: 'color:white;font-size:30px;font-weight:bold;font-family:arial;'%>
        </div>
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Users", members_path, class: 'nav-link', style: 'color:white;font-size:30px;font-weight:bold;font-family:arial;' if current_user.admin? %>
            </li>
            <li class="nav-item">
              <%= link_to "Visits", visits_path, style: 'color:white;font-size:30px;font-weight:bold;font-family:arial;' %>
            </li>
            <li class="nav-item">
              <%= link_to "Lockers", lockers_path, style: 'color:white;font-size:30px;font-weight:bold;font-family:arial;' if current_user.admin? %>
            </li>
          <% end %>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Hi #{current_user.full_name || current_user.email} !", member_path(current_user) ,style: 'color:white;font-size:30px;font-weight:bold;font-family:arial;'%>
            </li>
            <li class="nav-item">
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete , style: 'color:white;font-size:30px;font-weight:bold;font-family:arial;' %>
            </li>
          <%# else %>
            <%#= link_to "Sign in", user_session_path unless user_signed_in? %>
        <% end %>
      </div>
    </nav>

    <div class='container'>
      <% if notice %>
        <p class="alert alert-success notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= yield %>

    <div class="footer">
      <br/>
      <h4>Contact information: someone@example.com</h4>
      <h4> Copyright Â© BOSE Hackthan 2019. </h4>
      <br/>
    </div>
    </div>
  </body>
</html>
